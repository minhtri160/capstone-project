                            <a href="#" data-toggle="control-sidebar"><i class="fa fa-gears"></i></a>
                        </li>
                    </ul>
                </div>
            </nav>
        </header>
        <input type="text" value="" id="remote"/>
        <input type="button" value="OK" id="btnOK"/>
        <!-- =============================================== -->
        <!-- Left side column. contains the sidebar -->
        <aside class="main-sidebar">
            <!-- sidebar: style can be found in sidebar.less -->
            <section class="sidebar">
                <!-- Sidebar user panel -->
                <div class="user-panel">
                    
                    <div class="pull-left info">
                        <p>Name User</p>
                        <a href="#"><i class="fa fa-circle text-success"></i> Online</a>
                    </div>
                </div>
                <!-- search form -->
               
                <!-- /.search form -->
                <!-- sidebar menu: : style can be found in sidebar.less -->
                <ul class="sidebar-menu" data-widget="tree">
                    <li class="header">MAIN NAVIGATION</li>
                    <li class="treeview">
                        <a href="#">
                            <i class="fa fa-dashboard"></i> <span>Measure Dashboar</span>
                            <span class="pull-right-container">
                                <i class="fa fa-angle-left pull-right"></i>
                            </span>
                        </a>
                        <ul class="treeview-menu">
                            <li><a href="../../index.html"><i class="fa fa-circle-o"></i> Dashboard v1</a></li>
                            <li><a href="../../index2.html"><i class="fa fa-circle-o"></i> Dashboard v2</a></li>
                        </ul>
                    </li>

                </ul>
            </section>
            <!-- /.sidebar -->
        </aside>

        <!-- =============================================== -->
        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
            <!-- Content Header (Page header) -->
            <section class="content-header">
                <h1>
                    Measure Components
                    <small>version 1.0</small>
                </h1>
                <ol class="breadcrumb">
                    <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>

                </ol>
            </section>

            <!-- Main content -->
            <input type="hidden" id="accountId" value="@(((APMS.DataAccess.Account)Session["Account"]).AccountId)" />
            <section class="content">
                <div class="box-body">
                    @foreach (var device in Model.DeviceList)
                    {
                        string colorClass = "";
                        string iClass = "";
                        string state;
                        if (device.DeviceType == (int)APMS.Business.Dictionary.DeviceType.LighBulb)
                        {
                            colorClass = "small-box white bg-green-active";
                            iClass = "ion ion-lightbulb";
                        }
                        else if (device.DeviceType == (int)APMS.Business.Dictionary.DeviceType.Fan)
                        {
                            colorClass = "small-box bg-green-active";
                            iClass = "ion ion-lightbulb";
                        }
                        else if (device.DeviceType == (int)APMS.Business.Dictionary.DeviceType.Environment)
                        {
                            colorClass = "small-box bg-green-active";
                            iClass = "ion ion-thermometer";
                        }
                        else if (device.DeviceType == (int)APMS.Business.Dictionary.DeviceType.Fire)
                        {
                            colorClass = "small-box bg-green-active";
                            iClass = "ion ion-fireball";
                        }
                        else if (device.DeviceType == (int)APMS.Business.Dictionary.DeviceType.Security)
                        {
                            colorClass = "small-box bg-green-active";
                            iClass = "ion ion-lightbulb";
                        }
                        if (device.State == 1)
                        {
                            state = "On";
                        }
                        else
                        {
                            state = "Off";
                        }

                        <div class="col-lg-4 col-xs-12  ">
                            <div class="@colorClass" id="fan">
                                <div class="inner">
                                    <span class="info-box-text"><b>@device.DeviceName</b></span>
                                    <span class="info-box-number">
                                        <h2>
                                            Status: <span id="@device.DeviceId">@state</span>
                                        </h2>
                                    </span>
                                    @foreach (var sensor in device.SensorList)
                                    {
                                        <span class="info-box-text">
                                            @(sensor.SensorName + ":") <span id="@sensor.SensorId">@(sensor.Value)</span> @( " " + sensor.Unit)
                                            @if (sensor.WarningState != 0)
                                            {<img id="@(sensor.SensorId+"w")" style="width: 30px" ; src="~/Content/dist/img/warning-logo.png" />}
                                        </span>


                                    }<br />
                                </div>
                                <div class="icon">

                                    @*<span class="ion ion-alert-circled">@("      " )</span>*@
                                    <span><i class="@iClass"></i></span>
                                </div>
                                <a href="~/Views/Home/MoreInfo.cshtml" class="small-box-footer">More info <i class="fa fa-arrow-circle-right"></i></a>
                            </div>
                        </div>

                    }
                </div>
            </section>
            <!-- /.content -->
        </div>
        <!-- /.content-wrapper -->

        <footer class="main-footer">
            <div class="pull-right hidden-xs">
                <b>Version</b> 1.0.0
            </div>
            <strong>Copyright &copy; 2017 <a href="#">APMS Team</a>.</strong> All rights
            reserved.
        </footer>

        <!-- Control Sidebar -->
        
        <!-- /.control-sidebar -->
        <!-- Add the sidebar's background. This div must be placed
             immediately after the control sidebar -->
        <div class="control-sidebar-bg"></div>
    </div>
